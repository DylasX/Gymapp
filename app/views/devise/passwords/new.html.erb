<style>
  body {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  main {
    flex: 1 0 auto;
  }

  body {
    background: #fff;
  }

  .input-field input[type=date]:focus + label,
  .input-field input[type=text]:focus + label,
  .input-field input[type=email]:focus + label,
  .input-field input[type=password]:focus + label {
    color: #e91e63;
  }

  .input-field input[type=date]:focus,
  .input-field input[type=text]:focus,
  .input-field input[type=email]:focus,
  .input-field input[type=password]:focus {
    border-bottom: 2px solid #e91e63;
    box-shadow: none;
  }
</style>
<div class="section"></div>
<main>
  <center>
    <img class="responsive-img" style="width: 200px;" src="http://atxbodyflex.com/wp-content/uploads/2012/11/cropped-cropped-BodyFlexGym_HighRes_Transparent-Copy1.png" />
    <div class="section"></div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <%= devise_error_messages! %>

    <h5 class="indigo-text">¿Olvidaste tu contraseña?</h5>
    <div class="section"></div>

    <div class="container">
      <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE; width: 90%;">

        <form class="col s12" method="post">
          <div class='row'>
            <div class='col s12'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s12'><br>
              <%= f.email_field :email, autofocus: true %>
              <label for='email'>Escribe tu email</label>
            </div>
          </div>

          <div class='row'>
            <%= f.submit "Recuperar mi contraseña", :class => "col s12 btn btn-success indigo" %>
          </div>

          </div>


        </form>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </center>

  <div class="section"></div>
  <div class="section"></div>
</main>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>


<% end %>
