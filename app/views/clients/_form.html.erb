<style>
  body {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  main {
    flex: 1 0 auto;
  }

  body {
    background: #fff;
  }

  .input-field input[type=date]:focus + label,
  .input-field input[type=text]:focus + label,
  .input-field input[type=email]:focus + label,
  .input-field input[type=password]:focus + label {
    color: #e91e63;
  }

  .input-field input[type=date]:focus,
  .input-field input[type=text]:focus,
  .input-field input[type=email]:focus,
  .input-field input[type=password]:focus {
    border-bottom: 2px solid #e91e63;
    box-shadow: none;
  }
</style>
<div class="section"></div>
<main>
  <center>
      <% if @client.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@client.errors.count, "error") %> No se puedo guardar el cliente</h2>

          <ul>
          <% @client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>,
        </div>
      <% end %>
    <%= form_for(@client) do |f| %>
    <div class="container">
      <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE; width: 100%;">

        <form class="col s12" method="post">
          <div class='row'>
            <div class='col s12'>
              <h4>Registro clientes</h4>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s6'>
              <%= f.text_field :nombre, autofocus: true %>
              <label for='email'>Nombre</label>
            </div>

            <div class='input-field col s6'>
              <%= f.text_field :apellido, autofocus: true %>
              <label for='email'>Apellido</label>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s6'>
              <%= f.number_field :edad, autofocus: true%>
              <label for='email'>Edad</label>
            </div>

            <div class='input-field col s6'>
              <%= f.text_field :correo, autofocus: true %>
              <label for='email'>Correo</label>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s6'>
              <%= f.text_field :cel, autofocus: true %>
              <label for='email'>Celular</label>
            </div>
            <div class='input-field col s6'>
              <%= f.text_field :direccion, autofocus: true %>
              <label for='email'>Direcci√≥n</label>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s6'>
              <%= f.text_field :barrio, autofocus: true %>
              <label for='email'>Barrio</label>
            </div>
            <div class='input-field col s6'>
              <%= f.text_field :ciudad, autofocus: true %>
              <label for='email'>Ciudad</label>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s6'>
              <%= f.text_field :genero  %>
              <label for='email'>Genero</label>
            </div>
          </div>

            <div class='input-field col s6'>
              <%= f.text_field :fecha_fin, autofocus: true %>
            </div>

          <div class='row'>
            <div class='input-field col s6'>
              <%= f.date_field :fecha_fin, class: "datepicker" %>
            </div>
          </div>


            <div class='row'>
              <%= f.submit "Guardar", :class => "col s12 btn btn-success indigo" %>
            </div>
        </form>
      </div>
    </div>
  </center>

  <div class="section"></div>
  <div class="section"></div>
</main>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>



<% end %>
